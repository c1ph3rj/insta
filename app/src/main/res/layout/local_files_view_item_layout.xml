<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    android:background="?attr/colorOnSurface">

    <ImageView
        android:id="@+id/photoItemView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/src"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/videoItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/videoItemView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/src"
            android:scaleType="center" />


        <TextView
            android:id="@+id/durationOfTheVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:background="@color/instagramLightWhite"
            android:contentDescription="@string/src"
            android:fontFamily="@font/ibm_plex_mono_bold"
            android:padding="6dp"
            android:text="33:44"
            app:tint="?attr/colorOnSurface" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/selectedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectBtn"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/lightGreyText"
            android:fontFamily="@font/ibm_plex_mono_medium"
            android:padding="0dp"
            android:textColor="@color/white"
            app:cornerRadius="180dp" />


    </LinearLayout>

</FrameLayout>