<resources>
    <!-- Base application theme. -->
    <style name="Theme.Insta" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/instagramBlue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/instagramLightWhite</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>

        <item name="boxBackgroundColor">#2C2C2C</item>
    </style>

    <style name="customStatusBar" parent="Theme.Insta">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CircularProgress" parent="Theme.Insta">
        <item name="android:indeterminateDrawable">@drawable/loading_anim</item>
    </style>
</resources>